<Window x:Class="LoginTrailTest.AdminPanel.SearchTrainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginTrailTest.AdminPanel"
        mc:Ignorable="d"
        Title="SearchTrainWindow" Height="500" Width="1100" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FACA87" Padding="10">
            <TextBlock Text="Search Train" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Add your search controls here -->
            <StackPanel>
                <TextBox x:Name="SearchTextBox" Margin="5" Width="200" VerticalAlignment="Center"/>
                <Button Content="Search" Width="100" Margin="5" HorizontalAlignment="Center" Click="SearchButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Result ListView -->
        <ListView Grid.Row="2" ItemsSource="{Binding SearchResults}" Margin="20" x:Name="SearchResultsListView">
            <!-- Опціонально: можна вказати стиль для ListView -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Train ID" DisplayMemberBinding="{Binding Train_ID}" Width="60"/>
                    <GridViewColumn Header="Train Number" DisplayMemberBinding="{Binding Train_Number}" Width="150"/>
                    <GridViewColumn Header="Departure Station" DisplayMemberBinding="{Binding Departure_Station}" Width="150"/>
                    <GridViewColumn Header="Destination Station" DisplayMemberBinding="{Binding Destination_Station}" Width="160"/>
                    <GridViewColumn Header="Number of Cars" DisplayMemberBinding="{Binding Number_of_Cars}" Width="140"/>
                    <GridViewColumn Header="Car Types" DisplayMemberBinding="{Binding Car_Types}" Width="120"/>
                    <GridViewColumn Header="Number of Coupe" DisplayMemberBinding="{Binding Number_of_Coupe}" Width="120"/>
                    <GridViewColumn Header="Number of Plac" DisplayMemberBinding="{Binding Number_of_Plac}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
