<Window x:Class="LoginTrailTest.AdminSchedule.SearchSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginTrailTest.AdminSchedule"
        mc:Ignorable="d"
        Title="SearchSchedule" Height="450" Width="650" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FACA87" Padding="10">
            <TextBlock Text="Search schedule" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Add your search controls here -->
            <StackPanel>
                <TextBox x:Name="SearchTextBox" Margin="5" Width="200" VerticalAlignment="Center"/>
                <Button Content="Search" Width="100" Margin="5" HorizontalAlignment="Center" Click="SearchButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Result ListView -->
        <ListView x:Name="YourListView" Grid.Row="2" Margin="20">
            <!-- Опціонально: можна вказати стиль для ListView -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Schedule ID" DisplayMemberBinding="{Binding Schedule_ID}" Width="120"/>
                    <GridViewColumn Header="Train Number" DisplayMemberBinding="{Binding Train_Number}" Width="120"/>
                    <GridViewColumn Header="Platform" DisplayMemberBinding="{Binding Platform}" Width="120"/>
                    <GridViewColumn Header="Weekday" DisplayMemberBinding="{Binding Weekday}" Width="120"/>
                    <GridViewColumn Header="Departure Time" DisplayMemberBinding="{Binding Departure_Time}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
