<Window x:Class="LoginTrailTest.AdminStation.EditStation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginTrailTest.AdminStation"
        mc:Ignorable="d"
        Title="EditStation" Height="270" Width="300" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FACA87" Padding="10">
            <TextBlock Text="Edit station" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Add your editing controls here -->
            <StackPanel>
                <TextBox x:Name="StationNameTextBox" Margin="5" Width="200" VerticalAlignment="Center"/>
                <TextBox x:Name="CityTextBox" Margin="5" Width="200" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Save" Width="100" Margin="5" Click="SaveButtonStation"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="CancelButtonStation"/>
        </StackPanel>
    </Grid>
</Window>
