<Window x:Class="LoginTrailTest.CashierPanel.CreateTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:admin="clr-namespace:LoginTrailTest.Admin"
        xmlns:local="clr-namespace:LoginTrailTest.CashierPanel"
        mc:Ignorable="d"
        Title="CreateTicketWindow" Height="780" Width="400" Background="Transparent" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True">
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="10" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Border BorderThickness="0" CornerRadius="10" Background="#F2F2F0">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Upper panel -->
                <RowDefinition Height="*" />
                <!-- Main content -->
                <RowDefinition Height="Auto" />
                <!-- Lower panel -->
            </Grid.RowDefinitions>

            <!-- Upper panel -->
            <Border BorderThickness="0 0 0 2" BorderBrush="#e2e9e9" CornerRadius="10 10 0 0" Background="#CDCDCF" Padding="10"
                    MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseDown" Grid.Row="0">
                <Grid>
                    <Icon:PackIconMaterial Kind="TicketAccount" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Main content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="5"/>
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="Width" Value="200"/>
                            <Setter Property="Height" Value="26"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="Width" Value="200"/>
                            <Setter Property="IsSynchronizedWithCurrentItem" Value="True"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                        <TextBlock Text="Enter Ticket Code:" />
                        <TextBox x:Name="TicketCodeTextBox" IsReadOnly="True"/>
                        <Button Content="Code generation" Click="GenerateCode_Click" Width="200" HorizontalAlignment="Center"/>

                        <TextBlock Text="Select a date:" />
                        <DatePicker x:Name="DatePicker" Width="200" HorizontalAlignment="Center" DisplayDateStart="{x:Static sys:DateTime.Now}"/>

                        <TextBlock Text="Select a station:" />
                        <ComboBox x:Name="StationComboBox" ItemsSource="{Binding AvailableStations}" DisplayMemberPath="Station_Name" SelectedValuePath="Station_ID" SelectionChanged="StationComboBox_SelectionChanged" />

                        <TextBlock Text="Select a train:" />
                        <ComboBox x:Name="TrainNumberComboBox" ItemsSource="{Binding AvailableTrains}" DisplayMemberPath="Train_Number" SelectedValuePath="Train_ID" SelectionChanged="TrainNumberComboBox_SelectionChanged"/>

                        <TextBlock Text="Select a time:" />
                        <ComboBox x:Name="ClockNumberComboBox"/>

                        <TextBlock Text="Select a platform:" />
                        <ComboBox x:Name="PlatformComboBox"/>

                        <TextBlock Text="Select the type of car:" />
                        <ComboBox x:Name="CarTypeComboBox" SelectionChanged="CarTypeComboBox_SelectionChanged" />

                        <Label Grid.Row="5" Grid.Column="0" Content="Price:" />
                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="PriceTextBox" IsReadOnly="True" />

                        <TextBlock Text="Select a carriage:" />
                        <ComboBox x:Name="CarNumberBox" SelectionChanged="CarNumberBox_SelectionChanged"/>

                        <TextBlock Text="Select a location:" />
                        <ComboBox x:Name="SeatNumberBox"/>

                        <TextBlock Text="Enter your full name:" />
                        <TextBox x:Name="UsernameTextBox"/>
                    </StackPanel>
                    <!-- Horizontal StackPanel for buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                        <Button Content="Create" Width="100" Height="35" Click="CreateTicket_Click" Margin="10,0,0,0"/>
                        <Button Content="Cancel" Width="100" Height="35" Click="AbolitionTicket_Click" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Lower panel -->
            <Border Grid.Row="2" BorderThickness="0 2 0 0" BorderBrush="White" CornerRadius="0 0 10 10" Padding="10" Background="#CDCDCF">
                <Grid>
                    <TextBlock Margin="15 0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="31"
                               Foreground="Gray" Text="Make tickets!"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
