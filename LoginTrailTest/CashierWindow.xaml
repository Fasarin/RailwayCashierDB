<Window x:Class="LoginTrailTest.CashierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:LoginTrailTest"
        mc:Ignorable="d"
        Title="CashierWindow" Height="720" Width="1235" Background="Transparent" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Up panel -->
        <Border BorderThickness="0 0 0 2" BorderBrush="#e2e9e9" CornerRadius="10 10 0 0" Background="#CDCDCF" Padding="10"
MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseDown">
            <Grid>
                <Button Click="AccountButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left">
                    <Icon:PackIconMaterial Kind="Account" HorizontalAlignment="Left"/>
                </Button>
                
                <Icon:PackIconMaterial Kind="TicketAccount" HorizontalAlignment="Center"/>
                
                <Button Click="ExitButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="ExitRun" HorizontalAlignment="Right"/>
                </Button>
            </Grid>
        </Border>
        <Border Grid.Row="2" BorderThickness="0 2 0 0" BorderBrush="#e2e9e9" CornerRadius="0 0 10 10" Padding="20" Background="#CDCDCF">
            <Grid>
                <TextBlock Margin="15 0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"
               Foreground="Gray" Text="Have a nice working day!"/>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <!-- Рядок для кнопок -->
                <RowDefinition Height="Auto"/>
                <!-- Рядок для таблиці -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.Background>
                <SolidColorBrush Color="#F2F2F0"/>
            </Grid.Background>

            <!-- StackPanel для розміщення кнопок зверху -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="Date:" VerticalAlignment="Center" Margin="5"/>
                <DatePicker x:Name="DatePicker" Width="150" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="SearchTextBox" Width="200" VerticalAlignment="Center" Margin="0 0 5 0" />
                <Button Content="Ticket Search" Height="35" Width="100" Margin="5" FontSize="14" FontFamily="Arial" Click="SearchTicket"/>
                <Button Content="Ticket Create" Height="35" Width="120" Margin="5" FontSize="14" FontFamily="Arial" Click="TicketButton_Click"/>
                <Button Content="Ticket Refunds" Height="35" Width="135" Margin="5"  FontSize="14" FontFamily="Arial" Click="DeleteTicketButton_Click"/>
                <Button Content="Ticket printing" Height="35" Width="110" Margin="5"  FontSize="14" FontFamily="Arial" Click="SaveTicketAsPdfButton_Click"/>
                <Button Content="Statistics" Height="35" Width="100" Margin="5"  FontSize="14" FontFamily="Arial" Click="StatisticsButton_Click"/>
            </StackPanel>

            <!-- Grid для розміщення таблиці Train -->
            <Grid Grid.Row="1" Margin="20">
                <!-- DockPanel для розміщення ListView -->
                <DockPanel>
                    <DataGrid Name="YourData" AutoGenerateColumns="False"  CanUserAddRows="False" IsReadOnly="True" FontSize="18" FontFamily="Arial">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ Sale" Binding="{Binding Sale_ID}" Width="125"/>
                            <DataGridTextColumn Header="Ticket code" Binding="{Binding Ticket_Code}" Width="125"/>
                            <DataGridTextColumn Header="Terminal station" Binding="{Binding Station_Name}" Width="125"/>
                            <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" Width="125"/>
                            <DataGridTextColumn Header="Train number" Binding="{Binding Train_Number}" Width="125"/>
                            <DataGridTextColumn Header="Carriage number" Binding="{Binding Car_Number}" Width="125"/>
                            <DataGridTextColumn Header="Carriage type" Binding="{Binding Seat_Type}" Width="125"/>
                            <DataGridTextColumn Header="Seat number" Binding="{Binding Seat_Number}" Width="125"/>
                            <DataGridTextColumn Header="Date of dispatch" Binding="{Binding Departure_Date, StringFormat={}{0:dd/MM/yyyy}}" Width="125"/>
                            <DataGridTextColumn Header="Departure time" Binding="{Binding Departure_Time}" Width="125"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="60"/>
                            <DataGridTextColumn Header="Full name" Binding="{Binding Customer_Name}" Width="125"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
