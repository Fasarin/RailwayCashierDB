<Window x:Class="LoginTrailTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1024" Background="Transparent" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!-- Up panel -->
        <Border BorderThickness="0 0 0 2" BorderBrush="#e2e9e9" CornerRadius="10 10 0 0" Background="White" Padding="10"
                MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseDown">
            <Grid>
                <Button Click="ExitButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="ExitRun" HorizontalAlignment="Right"/>
                </Button>
                
                <Icon:PackIconMaterial Kind="Train" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
            <!-- Down panel -->
        <Border Grid.Row="2" BorderThickness="0 2 0 0" BorderBrush="White" CornerRadius="0 0 10 10" Padding="10" Background="White">
            <Grid>
                <TextBlock Margin="15 0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="31"
                           Foreground="Gray" Text="Enjoy your work!"/>
            </Grid>
        </Border>
        
         <!-- Middle panel -->
        <Grid Grid.Row="1">
            <Grid.Background>
                <SolidColorBrush Color="GhostWhite"/>
            </Grid.Background>

            <Grid>
                <Grid.Background>
                    <ImageBrush ImageSource="Image\beautiful-blue-passenger-train-at-the-railway-stat-PBHGTZH-min.jpg" Opacity="0.65"/>
                </Grid.Background>
            </Grid>

            <Border Width="300" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="GhostWhite"
                    BorderThickness="2" CornerRadius="10" Padding="30" Background="WhiteSmoke">
                <StackPanel>
                    <TextBlock Foreground="Gray" FontWeight="SemiBold" FontSize="16" Margin="0 0 0 10" Text="Please log in" />

                    <!-- Email -->
                    <Grid>
                        <TextBlock Margin="35 0 5 0" VerticalAlignment="Center" Foreground="Gray"
                                   Panel.ZIndex="1" IsHitTestVisible="False" Text="Введіть пошту" 
                                   Visibility="{Binding ElementName=txtEmail,Path=Text,Converter={StaticResource BoolToVis}}"/>

                        <TextBox x:Name="txtEmail" TextChanged="txtEmail_TextChanged" />

                        <Icon:PackIconMaterial Kind="Gmail" Width="15" Foreground="Black" VerticalAlignment="Center" Margin="10 0 0 0"/>
                    </Grid>

                    <!-- Password -->
                    <Grid>
                        <TextBlock Margin="35 0 5 0" VerticalAlignment="Center" Foreground="Gray"
                                   Panel.ZIndex="1" IsHitTestVisible="False" Text="Введіть пароль" 
                                   Visibility="{Binding ElementName=txtPassword,Path=Text,Converter={StaticResource BoolToVis}}"/>

                        <TextBox x:Name="txtPassword" TextChanged="txtPassword_TextChanged" />

                        <Icon:PackIconMaterial Kind="Key" Width="15" Foreground="Black" VerticalAlignment="Center" Margin="10 0 0 0"/>
                    </Grid>

                    <!-- Sign in -->
                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>

                        <Button Content="Log in" Style="{StaticResource redButton}" Margin="0 0 5 0" BorderBrush="Red" FontSize="14" FontFamily="Arial" Click="Button_Click"/>

                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
