<Window x:Class="LoginTrailTest.AdminRoute.CreateSeatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginTrailTest.AdminRoute"
        mc:Ignorable="d"
        Title="Create Seat" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FACA87" Padding="10">
            <TextBlock Text="Creating a place" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Add your input controls here -->
            <StackPanel>
                <TextBox x:Name="TrainNumberTextBox" Margin="5" Width="200" VerticalAlignment="Center" Text="Train number"/>
                <TextBox x:Name="CarNumberTextBox" Margin="5" Width="200" VerticalAlignment="Center" Text="Car number"/>
                <TextBox x:Name="CarTypeTextBox" Margin="5" Width="200" VerticalAlignment="Center" Text="Car type"/>
                <TextBox x:Name="SeatCodeTextBox" Margin="5" Width="200" VerticalAlignment="Center" Text="Location code"/>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Create" Width="100" Margin="5" Click="CreateButton_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
