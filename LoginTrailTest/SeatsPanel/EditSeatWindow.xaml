<Window x:Class="LoginTrailTest.AdminRoute.EditSeatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditSeatWindow" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="10">
            <TextBlock Text="Editing a location" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="20">
            <TextBox x:Name="TrainNumberTextBox" Margin="5" Width="200" VerticalAlignment="Center" Text="Train number"/>
            <TextBox x:Name="CarNumberTextBox" Margin="5" Width="200" VerticalAlignment="Center" Text="Car number"/>
            <TextBox x:Name="CarTypeTextBox" Margin="5" Width="200" VerticalAlignment="Center" Text="Car type"/>
            <TextBox x:Name="SeatCodeTextBox" Margin="5" Width="200" VerticalAlignment="Center" Text="Location code"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Save" Width="100" Margin="5" Click="UpdateButton_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
