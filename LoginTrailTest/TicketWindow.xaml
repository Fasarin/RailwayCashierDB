<Window x:Class="LoginTrailTest.TicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:LoginTrailTest"
        mc:Ignorable="d"
        Title="TicketWindow" Height="800" Width="1200" Background="Transparent" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Up panel -->
        <Border BorderThickness="0 0 0 2" BorderBrush="#e2e9e9" CornerRadius="10 10 0 0" Background="LightSkyBlue" Padding="10"
MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseDown">
            <Grid>
                <Icon:PackIconMaterial Kind="Calendar" HorizontalAlignment="Center"/>

                <Button Click="AccountButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left">
                    <Icon:PackIconMaterial Kind="Account" HorizontalAlignment="Left"/>
                </Button>
                <Button Click="ExitButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="ExitRun" HorizontalAlignment="Right"/>
                </Button>
            </Grid>
        </Border>
        <Border Grid.Row="2" BorderThickness="0 2 0 0" BorderBrush="#e2e9e9" CornerRadius="0 0 10 10" Padding="20" Background="LightSkyBlue">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Width="30" Margin="5" Background="{x:Null}" BorderBrush="{x:Null}" Click="TrainButton_Click">
                    <Button.Content>
                        <Icon:PackIconMaterial Kind="Train"/>
                    </Button.Content>
                </Button>

                <Button Grid.Column="1" Width="30" Margin="5" Background="{x:Null}" BorderBrush="{x:Null}" Click="SeatButton_Click">
                    <Button.Content>
                        <Icon:PackIconMaterial Kind="SeatPassenger"/>
                    </Button.Content>
                </Button>

                <Button Grid.Column="2" Width="30" Margin="5" Background="{x:Null}" BorderBrush="{x:Null}" Click="RouteButton_Click">
                    <Button.Content>
                        <Icon:PackIconMaterial Kind="RoadVariant"/>
                    </Button.Content>
                </Button>

                <Button Grid.Column="3" Width="30" Margin="5" Background="{x:Null}" BorderBrush="{x:Null}" Click="CalendarButton_Click">
                    <Button.Content>
                        <Icon:PackIconMaterial Kind="Calendar"/>
                    </Button.Content>
                </Button>

                <Button Grid.Column="4" Width="30" Margin="5" Background="{x:Null}" BorderBrush="{x:Null}" Click="MapMarkerPath_Click">
                    <Button.Content>
                        <Icon:PackIconMaterial Kind="CityVariant"/>
                    </Button.Content>
                </Button>

                <Button Grid.Column="5" Width="30" Margin="5" Background="{x:Null}" BorderBrush="{x:Null}" Click="TicketAccount_Click">
                    <Button.Content>
                        <Icon:PackIconMaterial Kind="TicketAccount"/>
                    </Button.Content>
                </Button>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <!-- Рядок для кнопок -->
                <RowDefinition Height="Auto"/>
                <!-- Рядок для таблиці -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.Background>
                <SolidColorBrush Color="#F2F2F0"/>
            </Grid.Background>

            <!-- StackPanel для розміщення кнопок зверху -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="Date:" VerticalAlignment="Center" Margin="5"/>
                <DatePicker x:Name="DatePicker" Width="150" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="SearchTextBox" Width="200" VerticalAlignment="Center" Margin="5"/>
                <Button Content="Search" Height="35" Width="100" Margin="5" Click="SearchSchedule"/>
                <Button Content="Stats" Height="35" Width="150" Margin="5" Click="ShowStatisticsButton_Click"/>
            </StackPanel>

            <!-- Grid для розміщення таблиці Train -->
            <Grid Grid.Row="1" Margin="20">
                <!-- DockPanel для розміщення ListView -->
                <DockPanel>
                    <DataGrid Name="YourData" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" FontSize="18" FontFamily="Arial">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ Sale" Binding="{Binding Sale_ID}" Width="125"/>
                            <DataGridTextColumn Header="Ticket Code" Binding="{Binding Ticket_Code}" Width="125"/>
                            <DataGridTextColumn Header="Terminal station" Binding="{Binding Station_Name}" Width="125"/>
                            <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" Width="125"/>
                            <DataGridTextColumn Header="Train number" Binding="{Binding Train_Number}" Width="125"/>
                            <DataGridTextColumn Header="Car type" Binding="{Binding Seat_Type}" Width="125"/>
                            <DataGridTextColumn Header="Seat number" Binding="{Binding Seat_Number}" Width="125"/>
                            <DataGridTextColumn Header="Date of dispatch" Binding="{Binding Departure_Date, StringFormat={}{0:dd/MM/yyyy}}" Width="125"/>
                            <DataGridTextColumn Header="Departure time" Binding="{Binding Departure_Time}" Width="125"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                            <DataGridTextColumn Header="Full name" Binding="{Binding Customer_Name}" Width="125"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
